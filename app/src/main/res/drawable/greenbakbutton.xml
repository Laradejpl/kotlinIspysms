<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/gren" /> <!-- Fond vert -->
            <corners android:radius="12dp" /> <!-- Coins arrondis -->
            <stroke
                android:width="2dp"
                android:color="@color/white" /> <!-- Contour blanc -->
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/gren" /> <!-- Fond vert -->
            <corners android:radius="20dp" /> <!-- Coins arrondis -->
            <stroke
                android:width="2dp"
                android:color="#FFFFFF" /> <!-- Contour blanc -->
        </shape>
    </item>
</selector>
